<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.cronosx.haushalt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="de.cronosx.haushalt.StaticContextApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.cronosx.haushalt.HouseholdLoginActivity"
            android:label="@string/title_activity_household_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.cronosx.haushalt.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="de.cronosx.haushalt.HouseholdRegisterActivity"
            android:label="@string/title_activity_household_register" >
        </activity>
    </application>

</manifest>
